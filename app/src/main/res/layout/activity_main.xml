<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind = "http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="main"
            type="com.example.roomfriendstest.view.MainActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:background="#eeeeee">
        <LinearLayout
            android:id="@+id/search_linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_line"
            >
            <LinearLayout
                android:id="@+id/edit_linear"
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:background="@drawable/edittextline"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"/>
                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    tools:ignore="NestedWeights" />
                <ImageButton
                    android:onClick="@{main::clearClick}"
                    android:src="@drawable/cancel"
                    android:scaleType="fitXY"
                    android:id="@+id/btn_clear"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <Button
                android:onClick="@{main::hideClick}"
                android:id="@+id/btn_hide"
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:stateListAnimator="@null"
                android:layout_marginTop="5dp"
                android:text="@string/btnCancel"
                android:textAllCaps="false"
                android:textColor="#6666ff"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/search_linear"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="@{main.notifyText}"
            android:textColor="#000000"
            android:background="#eeeeee"
            android:visibility="invisible"
            />
        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:id="@+id/user_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0px"
            app:layout_constraintTop_toBottomOf="@+id/search_linear"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:verAdapter="@{main.getAdapter()}"/>
        <TextView
            android:id="@+id/text_loding"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/loading_line"
            android:text="@string/loading"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            android:visibility="invisible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
